""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set surround
set multiple-cursors
set commentary
set argtextobj
set easymotion
set textobj-entire
set ReplaceWithRegister

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Common settings -------------------------
set showmode
set so=5
set incsearch
set nu
"""把y复制的内容到剪贴板
set clipboard=unnamed

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

""" Mappings --------------------------------
map <leader>f <Plug>(easymotion-s)
map <leader>e <Plug>(easymotion-f)

map <leader>r <Action>(RenameElement)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)

map <leader>s <Action>(SelectInProjectView)
map <leader>a <Action>(PreviousTab)
map <leader>d <Action>(NextTab)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <S-Space> <Action>(GotoNextError)

map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>pf <Action>(GotoFile)
map <leader>sj <Action>(FileStructurePopup)
map <leader>ps <Action>(SelectInProjectView)
map gd <Action>(GotoDeclaration)
map gb <Action>(JumpToLastChange)
map ga <Action>(GotoAction)
map gc <Action>(GotoClass)
map gs <Action>(GotoSuperMethod)
map gi <Action>(GotoImplementation)
map gu <Action>(ShowUsages)
map gp <Action>(FindInPath)

map gr <Action>(RecentFiles)